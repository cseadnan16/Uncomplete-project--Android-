<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:padding="@dimen/_6sdp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center_horizontal" android:id="@+id/profile_image" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/profile_user_icon" android:layout_weight="0.7"/>
            <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="0.3">
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/black" android:layout_gravity="left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Name : "/>
                    <TextView android:textSize="16sp" android:textColor="@color/black" android:layout_gravity="left" android:id="@+id/userName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text=""/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/black" android:layout_gravity="left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Phone Number : "/>
                    <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="@color/black" android:layout_gravity="left" android:id="@+id/userNumber" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text=" "/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/black" android:layout_gravity="left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Email : "/>
                    <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="@color/black" android:layout_gravity="left" android:id="@+id/userEmail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text=" "/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/black" android:layout_gravity="left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Address : "/>
                    <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="@color/black" android:layout_gravity="left" android:id="@+id/userAddress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text=" "/>
                </LinearLayout>
            </LinearLayout>
            <ImageView android:id="@+id/subscribe" android:padding="@dimen/_1sdp" android:layout_width="wrap_content" android:layout_height="@dimen/_30sdp" android:layout_marginTop="@dimen/_10sdp" android:src="@drawable/sss"/>
            <TextView android:textStyle="bold" android:gravity="center" android:id="@+id/exchangeBook" android:background="@drawable/text_background" android:padding="@dimen/_4sdp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_10sdp" android:text="Exchange Book"/>
            <TextView android:textStyle="bold" android:gravity="center" android:id="@+id/updatProfile" android:background="@drawable/text_bg2" android:padding="@dimen/_4sdp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_5sdp" android:text="Update Profile"/>
            <Button android:id="@+id/logout" android:background="@drawable/shapeshow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_16sdp" android:text="@string/log_out"/>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
